<li class="dropdown">
    <a href="#"
       id="author-dropdown-menu-link"
       class="dropdown-toggle"
       data-toggle="dropdown">Recent Queries<span class="caret"></span>
    </a>
    <ul id="recent-queries-dropdown-menu" class="dropdown-menu" role="menu">
        <% if (session[:queries].try('size') || 0) > 0 %>
            <% session[:queries].try('reverse_each') do |query| %>
                <li role="presentation">
                    <a role="menuitem"
                       tabindex="-1"
                       href="#"
                       class="write-to-query-field-and-run-search"
                       data-value="<%= query %>"><%= query %>
                    </a>
                </li>
            <% end %>
        <% else %>
            <li class="disable"><a>[No recent queries.]</a></li>
        <% end %>
    </ul>
</li>
