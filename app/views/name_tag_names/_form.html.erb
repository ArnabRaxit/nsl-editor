<h5>Add a Tag</h5>

<% name_tag_name = name.name_tag_names.new %>

<%= form_for(name_tag_name, remote: true) do |f| %>
  <%= f.hidden_field(:name_id, value: name_tag_name.name_id) %>
  <div class="form-group">
    <%= f.select :tag_id, (NameTag.all - name.name_tags).collect{|name_tag| [name_tag.name,name_tag.id]}, {include_blank: ''}, class: 'form-control width-10em', tabindex: increment_tab_index %>
    <br>
    <%= f.submit 'Add', class: 'form-control width-10em', title: 'Tag the name with the selected tag' %>
  </div>
<% end %>
