<tr id="search-result-<%= search_result.id %>" 
  class="search-result  <%= 'fresh' if search_result.fresh? %>"  
  data-get-url="<%= author_path(search_result.id) %>"
  data-edit-url="<%= author_path(search_result.id) %>"
  data-base-url="<%= author_path(search_result.id) %>"
  data-record-id="<%= search_result.id %>"
  data-record-type="author"
  tabindex="<%= increment_tab_index(100) %>"
    >
  <td class="checkbox-container">
    <div
      class="stylish-checkbox acts-as-checkbox nsl-inline-block stylish-checkbox-unchecked" 
      tabindex="<%= increment_tab_index(1) %>"
      dir="ltr" 
      role="checkbox" 
      data-checked="false"> 
    </div>
  </td> 
  <td class="nsl-tiny-icon-container takes-focus width-1-percent"><%= record_icon('author') %></td>
  <td class="text takes-focus name main-content min-width-40-percent max-width-60-percent width-50-percent <%= 'give-me-focus' if give_me_focus %>">
    <a
      class="show-details-link"
      tabindex="<%= increment_tab_index %>" 
      id="<%= %Q(#{search_result.class}-#{search_result.id}) %>">
    <% if search_result.full_name.present? %>
		  <%= "#{search_result.name} (#{search_result.full_name})" %>
		<% else %>
		  <%= "#{search_result.name}" %>
		<% end %>
    <% if search_result.duplicate? %> [Duplicate] <% end %></a>
  </td>
  <td 
    id="<%= %Q(#{search_result.class}-#{search_result.id}-abbrev) %>" 
    class="text takes-focus abbrev main-content width-50-percent max-width-60-percent">
    <%= "#{ search_result.abbrev}" %>
  </td>
  <td class="takes-focus width-5-percent filler">&nbsp;</td>
</tr>
