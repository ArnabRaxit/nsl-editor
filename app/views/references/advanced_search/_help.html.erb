  <h4>Searchable Reference fields</h4>
  <h5>Citation, title</h5>
<table class="table table-striped">
  <tr><th>Field</th><th>Description</th></tr>
  <% [
      {field_name: '', description: "default reference searches are on citation, with trailing wildcard added automatically"},
      {field_name: 'citation:', description: "citation, with trailing wildcard added automatically"},
      {field_name: 'citation-exact:', description: "citation"},
      {field_name: 'title:', description: "title"},
      ].each do |val| %>
  <tr>
    <td class="width-20-percent">
      <a href="javascript:void(0)" class="searchable-field width-100-percent" >
        <span class="blue"><%= val[:field_name] %></span>
      </a>
    </td>
    <td><%= val[:description].html_safe %></td>
    <% if val[:partial].present? %>
      <td><%= render partial: val[:partial] %></td>
    <% else %>
      <td></td>
    <% end %>
  </tr>
  <% end %>
</table>
