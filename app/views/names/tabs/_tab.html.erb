<% this_tab_re = Regexp.new(this_tab) %>
<% active_tab = @tab.match(this_tab_re) || 
                (@tab.match(/tab_more/) && this_tab.match(/tab_comments/)) ||
                (@tab.match(/tab_comments|tab_name_tags|tab_copy|tab_delete/) && this_tab.match(/tab_more/)) %>

<% data = Hash.new %>
<% data['edit-url'] = name_tab_path(@name,tab:"#{this_tab}") %>
<% data['prev-tab'] = prev_tab unless prev_tab.blank? %>
<% data['tab-name'] = this_tab %>

<li class='first <%= active_tab ? "active" : "non-active" %>'>
 <%= link_to link_text,
             '#',
             id: link_id,
             class: 'tab edit-details-tab', 
             title: link_title,
             tabindex: tab_index,
             data: data %>
</li>


