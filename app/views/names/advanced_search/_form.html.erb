<div id="advanced-search-name-form-container" class="">
  <form class="form-inline">
  <input name="search_target" value="names" type="hidden" />
  <input name="search_from" value="fields" type="hidden" />
<table class="table advanced-form-table" class="table table-bordered" >
  <tr><td class="width-12-percent">Set up</td> <td></td><td></td></tr>
  <tr>
    <td></td>
    <td class="align-right width-15-percent">
      <label for="list-or-count">List or count</label>
    </td>
    <td>
      <select id="name-advanced-search-list-or-count" name="list_or_count" class="form-control">
        <option value='count'>count records</option>
        <option value='list' selected='selected'>list results</option>
    </select>
    </td>
  </tr>
  <tr>
    <td></td>
    <td class="align-right width-15-percent">
    </td>
    <td>
    <%= radio_button_tag(:limited, "true", class:'form-control') %>
    <%= label_tag(:limited_true, "limited") %>
    <%= radio_button_tag(:limited, "false", class:'form-control') %>
    <%= label_tag(:limited_false, "unlimited") %>
    </td>
  </tr>
  <tr>
    <td></td>
    <td class="align-right width-15-percent">
      <label for="query-on">List size</label>
    </td>
    <td>
      <input id="name-advanced-search-set-size" name="name_search_name" value="100" type="number" class="form-control min-width-20em" placeholder="Number of records for a list search" min="1"/>
    </td>
  </tr>
</table>
  </form>



<form class="form-inline">
  <table class="table advanced-form-table" class="table table-bordered" >
  <tr> <td class="width-12-percent">Name</td><td></td><td></td> </tr>
  <tr>
    <td></td>
    <td class="align-right width-15-percent">
    </td>
    <td>
      <input id="name-advanced-search-name" name="name_search_name" value="" type="text" class="form-control min-width-20em" placeholder="Name string, with optional wildcard (*)"/>
    </td>
  </tr>
  </table>
</form>



  <form class="form-inline">
<table class="table advanced-form-table" class="table table-bordered" >
  <tr> <td class="width-12-percent">Name&nbsp;Type</td><td></td><td></td></tr>
  <tr>
    <td></td>
    <td class="align-right width-15-percent">
      <label for="query-on">Options</label>
    </td>
    <td>
<select id="name-advanced-search-name-type-options" style="height: 10em;" class="form-control" title="Name type options. Comma-separated list. Or wildcard." multiple="multiple">
<optgroup label="Scientific">
<option class="" value="autonym">autonym</option>
<option class="" value="hybrid autonym">hybrid autonym</option>
<option class="" value="hybrid formula parents known">hybrid formula parents known</option>
<option class="" value="hybrid formula unknown 2nd parent">hybrid formula unknown 2nd parent</option>
<option class="" value="intergrade">intergrade</option>
<option class="" value="named hybrid">named hybrid</option>
<option class="" value="named hybrid autonym">named hybrid autonym</option>
<option class="" value="phrase name">phrase name</option>
<option class="" value="sanctioned">sanctioned</option>
<option class="" value="scientific">scientific</option>
</optgroup>
<optgroup label="Cultivars">
<option class="" value="cultivar">cultivar</option>
<option class="" value="cultivar hybrid">cultivar hybrid</option>
<option class="" value="cultivar hybrid formula">cultivar hybrid formula</option>
<option class="" value="graft/chimera">graft/chimera</option>
</optgroup>
<optgroup label="Common, informal">
<option class="" value="common">common</option>
<option class="" value="informal">informal</option>
</optgroup>
<optgroup label="Other">
<option class="" value="[default]">[default]</option>
<option class="" value="[n/a]">[n/a]</option>
<option class="" value="[unknown]">[unknown]</option>
</optgroup>
</select>
    </td>
  </tr>

  <tr>
    <td></td>
    <td class="align-right">
      <label for="query-on"></label>
    </td>
    <td>
      <input id="name-advanced-search-name-type-list" name="name_search_author_abbrev" 
             value="" type="text" style="width: 100%" class="form-control min-width-20em width-100-percent" 
             placeholder="Comma-separated list of name types">
    </td>
  </tr>
</table>
  </form>
<form class="form-inline">
  <table class="table advanced-form-table" class="table table-bordered" >
    <tr> <td class="width-12-percent">Name&nbsp;Rank</td><td></td><td></td></tr>
  <tr>
    <td></td>
    <td class="align-right width-15-percent">
      <label for="query-on">Rank</label>
    </td>
