  <h4>Searchable Name fields</h4>
  <h5>Name</h5>
<table class="table table-striped">
  <tr><th>Field</th><th>Description</th></tr>
  <% [
      {field_name: '', description: "default search is on full name, with trailing wildcard added automatically"},
      {field_name: 'name:', description: "full name, with trailing wildcard added automatically"},
      {field_name: 'name-exact:', description: "full name"}
      ].each do |val| %>
  <tr>
    <td class="width-20-percent">
      <a href="javascript:void(0)" class="searchable-field width-100-percent" >
        <span class="blue"><%= val[:field_name] %></span>
      </a>
    </td>
    <td><%= val[:description].html_safe %></td>
    <% if val[:partial].present? %>
      <td><%= render partial: val[:partial] %></td>
    <% else %>
      <td></td>
    <% end %>
  </tr>
  <% end %>
</table>
  <h5>Coded fields</h5>
<table class="table table-striped">
