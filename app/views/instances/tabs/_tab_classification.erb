<% increment_tab_index(0) %>

<% if @current_classification %>
    <h5>
      <% if @current_classification.tree_type == 'P' %>
          Placement in <%= @current_classification.derivedLabel %>
      <% elsif @current_classification.tree_type == 'U' %>
          Placement in <%= @current_classification.derivedLabel %><br/>
          Using workspace "<%= @current_classification.title %>"
      <% else %>
          Classification (<%= @current_classification.derivedLabel %> of type <%= @current_classification.tree_type %>)
      <% end %>
    </h5>
    <div>
      <b>Name</b>: <%= raw(@instance.name.full_name_html) %>
    </div>
    <div>
      <b>Reference</b>: <%= raw(@instance.reference.citation_html) %>
    </div>

    <%
      # prefetch this - we will be using it a fair bit
      placement = @current_classification.find_placement_of_name(@instance.name)
    %>

    <% if placement.nil? %>
        <b><%= @current_classification.derivedLabel %> status</b>: Non <%= @current_classification.derivedLabel %>.
    <% elsif placement.subnode.instance == @instance %>
        <div>
          <b><%= @current_classification.derivedLabel %> Status</b>:

          <%=
            case placement.subnode.type_uri_id_part
              when 'ApcConcept' then
                'accepted'
              when 'ApcExcluded' then
                'excluded name'
              when 'DeclaredBt' then
                "non-#{@current_classification.derivedLabel } parent"
              else
                placement.subnode.node_type_uri_id_part
            end
          %>
        </div>

        <div>
          <b><%= @current_classification.derivedLabel %> Parent</b>:
          <% if placement.supernode.type_uri_id_part == 'classification-root' %>
              no name (top-level instance)
          <% else %>
              <%= raw(placement.supernode.name.full_name_html) %>
          <% end %>
        </div>
    <% else %>

        <div>
          <b>Current <%= @current_classification.derivedLabel %> Reference</b>:
          <% if placement.subnode.instance.reference.nil? %>
              (name placed without reference)
          <% else %>
              <%= raw(placement.subnode.instance.reference.citation_html) %>
          <% end %>
        </div>

        <div>
          <b> <%= @current_classification.derivedLabel %> Parent</b>:
          <% if placement.supernode.type_uri_id_part == 'classification-root' %>
              no name (top-level instance)
          <% else %>
              <%= raw(placement.supernode.name.full_name_html) %>
          <% end %>
        </div>


    <% end %>

    <%= divider %>

    <%#TODO: move this block to _classification_edit_widgets or similar %>
    <% if @current_classification.editableBy?(@current_user) %>
        <% if !@instance.cited_by_id %>
            <%= form_for(@current_classification, controller: 'Trees', action: 'patch', remote: true, url: :tree_arrangement_place_name) do |f| %>
                <%= f.hidden_field(:name_id, value: @instance.name_id) %>
                <h3>
                  <% if !placement.nil? && placement.subnode.instance == @instance %>
                      Update <%= @current_classification.derivedLabel %> for this instance
                  <% else %>
                      Use this instance in <%= @current_classification.derivedLabel %>
                  <% end %>
                </h3>

              <%= f.submit id: "place_name",
                             class: "btn btn-primary width-6em",
                             tabindex: increment_tab_index,
                             title: "Select to #{placement.nil? ? 'place' : 'update'} this name.",
                             value: "#{placement.nil? ? 'Place' : 'Update'}" %>
            <% end %>

            <%= divider %>
        <% end %>

        <% if !placement.nil? && placement.subnode.instance == @instance %>
            <%= form_for(@current_classification, controller: 'Trees', action: 'patch', remote: true, url: :tree_arrangement_remove_name) do |f| %>
                <%= f.hidden_field(:name_id, value: @instance.name_id) %>
                <h3>Remove name from <%= @current_classification.derivedLabel %></h3>

                <u><%= raw(@instance.name.full_name_html) %></u> will be removed from
                <%= @current_classification.derivedLabel %> <br/> in workspace
                <u><%= @current_classification.title %></u>.

                <%= f.submit id: "remove_name_placement",
                             class: "btn btn-primary width-6em",
                             tabindex: increment_tab_index,
                             title: "Select to remove this name.",
                             value: "Remove" %>

            <% end %>
            <%= divider %>
        <% end %>
    <% end %>


<% else %>
    <h5>No classification selected</h5>
    <p>
      Select a classification or workspace from the User&nbsp;&gt;&nbsp;Classifications menu.
    </p>
<% end %>


<div id="instance-note-fields">
  <%= render partial: 'instances/tabs/apc_note_widgets',
             locals: {instance_notes: @instance.apc_instance_notes} %>
</div>



