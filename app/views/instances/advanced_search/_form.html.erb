<div id="advanced-search-name-form-container" class="">
  <form class="form-inline">
  <input name="search_target" value="names" type="hidden" />
  <input name="search_from" value="fields" type="hidden" />
<table class="table advanced-form-table" class="table table-bordered" >
  <tr><td class="width-5-percent">List/count</td> 
    <td class="align-right width-15-percent"><label class="plain" for="query-on">Options</label></td>
    <td>
      <select id="name-advanced-search-list-or-count" name="list_or_count" class="form-control">
        <option value='count'>count records</option>
        <option value='list' selected='selected'>list results</option>
    </select>
    </td>
  </tr>
  <tr>
    <td></td>
    <td class="align-right width-15-percent">
      <label class="plain" for="query-on">Size</label>
    </td>
    <td>
      <input id="name-advanced-search-set-size" name="name_search_name" value="100" type="number" class="form-control min-width-10em" placeholder="Number of records for a list search" min="1" max="1000"/>
    </td>
  </tr>
    <tr> 
      <td class="width-5-percent">Type</td>
      <td class="align-right width-15-percent">
        <label class="plain" for="query-on">Options</label>
      </td>
      <td><%= select_tag('instance-advanced-search-type', 
                     options_for_select(InstanceType.query_form_options),
                     title: 'Select one type', 
                     include_blank: true,
                     autocomplete: "off", 
                     class: "form-control give-me-focus") 
                   %>
      </td>
    </tr>
