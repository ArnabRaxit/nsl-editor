<h5>
Update status or parent in <%= @current_workspace.title %>
</h5>
        <% if !@instance.cited_by_id %>
            <%= form_tag({controller: 'trees', action: 'place_name'}, {method: :patch, remote: true}) do %>
                <%= hidden_field_tag("place_name[name_id]", @instance.name.id) %>
                <%= hidden_field_tag("place_name[instance_id]", @instance.id) %>
                <%
                    placementType =  @placement.node.type_uri_id_part
                %>

    <div class="form-group">
      <%= radio_button_tag(:type, "accepted", @tree_link.default_to_accepted?, name: "place_name[placement_type]") %>
      <%= label_tag(:type_accepted, "Accepted") %>
      <%= radio_button_tag(:type, "excluded", @tree_link.default_to_excluded?, name: "place_name[placement_type]") %>
      <%= label_tag(:type_excluded, "Excluded") %>
      <%= radio_button_tag(:type, "untreated", @tree_link.default_to_untreated?, name: "place_name[placement_type]") %>
      <%= label_tag(:type_untreated, "Untreated") %>
    </div>

                <div class="form-group">
                  <label>Parent</label>

                  <input type="text"
                         class="form-control"
                         title="APC Parent"
                         name="place_name[parent_name]"
                         value="<%= @placement.supernode.name.full_name %>"
                  >


                </div>


                <%= submit_tag "Update",
                             id: "update_placement_btn",
                             class: "btn btn-primary width-6em",
                             tabindex: increment_tab_index,
                             title: "Update the name placement status or parent." %>

                <div id="placement-error-message-container" class="error-message-container red hidden"></div>
            <% end %>
          <% end %>

