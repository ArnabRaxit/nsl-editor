<% increment_tab_index %>

<ul class="nav nav-tabs">
  <% this_tab = 'tab_show_1' %>

  <%= render partial: 'tab', locals: {first: true,
                                      last: false,
                                      this_tab: 'tab_show_1', 
                                      link_text: 'Details', 
                                      link_id: 'instance-show-tab', 
                                      link_title: 'View a summary',
                                      tab_index: @tab_index,
                                      prev_tab: '.search-result.show-details', 
                                      next_tab: '' } %>

  <% if can? :edit, 'anything' %>

    <%= render partial: 'tab', locals: {first: false,
                                        last: false,
                                        this_tab: 'tab_edit', 
                                        link_text: 'Edit', 
                                        link_id: 'instance-edit-tab', 
                                        link_title: 'Instance edit',
                                        tab_index: increment_tab_index,
                                        prev_tab: '',
                                        next_tab: '' } %>
  
    <%= render partial: 'tab', locals: {first: false,
                                        last: false,
                                        this_tab: 'tab_edit_notes', 
                                        link_text: 'Notes', 
                                        link_id: 'instance-edit-notes-tab', 
                                        link_title: 'Edit notes',
                                        tab_index: increment_tab_index,
                                        prev_tab: '',
                                        next_tab: '' } %>
  
    <% if @instance.simple? %>
  
      <%= render partial: 'tab', locals: {first: false,
                                          last: false,
                                          this_tab: 'tab_synonymy',
                                          link_text: 'Synonymy',
                                          link_id: 'instance-cite-this-instance-tab',
                                          link_title: 'Create synonymy.',
                                          tab_index: increment_tab_index,
                                          prev_tab: '',
                                          next_tab: ''} %>
      <%= render partial: 'tab', locals: {first: false,
                                          last: false,
                                          this_tab: 'tab_create_unpublished_citation',
                                          link_text: 'Unpub cit',
                                          link_id: 'unpublished-citation-tab',
                                          link_title: 'Create unpublished citation.',
                                          tab_index: increment_tab_index,
                                          prev_tab: '',
                                          next_tab: ''} %>
      <%= render partial: 'tab', locals: {first: false,
                                          last: false,
                                          this_tab: 'tab_apc_placement',
                                          link_text: 'APC',
                                          link_id: 'instance-apc-placement-tab',
                                          link_title: 'Place instance in APC.',
                                          tab_index: increment_tab_index,
                                          prev_tab: '',
                                          next_tab: ''} %>
    <% end %>

    <%= render partial: 'tab', locals: {first: false,
                                        last: true,
                                        this_tab: 'tab_comments', 
                                        link_text: 'Adnot.', 
                                        link_id: 'instance-comments-tab', 
                                        link_title: 'Edit comments',
                                        tab_index: increment_tab_index,
                                        prev_tab: '',
                                        next_tab: '.search-result.show-details' } %>
  
  <% end %>
</ul>

